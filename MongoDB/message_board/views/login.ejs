<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Message Board</title>
    <style>
      fieldset{
        width: 300px;
        margin: 20px 10px;
      }
      form div{
        margin: 5px 0;
      }
      form div label{
        display: inline-block;
        width: 75px;
        margin-right: 40px;
      }
      form div input{
        width: 150px;
      }
      form button{
        float: right;
        margin: 5px 0;
      }
    </style>
  </head>
  <body>
    <fieldset>
      <legend>Login</legend>
      <form action="/" method='post'>
        <div><label for="">Name:</label><input type="text" name='name'></div>
        <div><label for="">Password:</label><input type="text" name='password'></div>
        <button name='login'>Login</button>
      </form>
    </fieldset>
    <fieldset>
      <legend>Register</legend>
      <form action="/" method='post'>
        <div><label for="">Name:</label><input type="text" name='name'></div>
        <div><label for="">Password:</label><input type="text" name='password'></div>
        <button name='register'>Register</button>
      </form>
    </fieldset>
    <ul>
      <% for(const error of errors){ %>
        <li><%= error %></li>
      <% } %>
    </ul>
  </body>
</html>
